  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "globals": {
      "$": true,
      "pkp": true
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "bracketSpacing": false,
          "singleQuote": true,
          "useTabs": true,
          "htmlWhitespaceSensitivity": "ignore"
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
